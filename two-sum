        "arr = [1,3,7, 8, 12]\n",
        "target = 12\n",
        "accessed = dict()\n",
        "def two_sum(arr, target):\n",
        "  i = 0\n",
        "  for i in range(len(arr)):\n",
        "    diff = target - arr[i]\n",
        "    if diff in accessed:\n",
        "      return [i, accessed[diff]]\n",
        "    else:\n",
        "      accessed[arr[i]] = i\n",
        "  return []\n",
        "print(two_sum(arr, 15))"
      ]
